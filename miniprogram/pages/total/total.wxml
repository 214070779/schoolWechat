<view class='sign-title'>已签到的课程</view>
 <view class='history-table-wrap'>
    <view class="table">
      <view class="tr">
          <view class="th th1">课程名称</view>
          <view class="th th2">签到时间</view>
          <view class="th th3">签到状态(0为迟到，1为正常)</view>
      </view>
      <view class="tr"wx:for-items="{{datalist}}" wx:for-item="item">
          <view class="td td1">{{item.course_name}}</view>
          <view class="td td2">{{item.sign_time}}</view>
          <view class="td td3">{{item.sign_status}}</view>
      </view>
    </view>
 </view>